@{
    Layout = null;
ViewBag.Title = "Login page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <link href="@("http://"  + Context.Request.Host.ToString() + "/auth.css")" rel="stylesheet" />
    <main>
        <div class="container">
            <div class="form-container">
                <h4>Login</h4>
                <form asp-action="Login" asp-controller="Authorithation" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
                    <div class="form-field">
                        <label for="email">Username:</label>
                        <input type="email" name="email" id="email" />
                    </div>
                    <div class="form-field">
                        <label for="password">Password:</label>
                        <input type="password" name="password" id="password" />
                    </div>
                    <div class="form-field">
                        <button>Log in</button>
                    </div>
                    <p class="auth-link">
                        Don't have account?<a asp-action="Register" asp-controller="Authorithation"> Register</a>
                    </p>
                </form>
                <div class="error-message">@ViewBag.ErrorMessage</div>
            </div>
        </div>
    </main>
</body>
</html>
